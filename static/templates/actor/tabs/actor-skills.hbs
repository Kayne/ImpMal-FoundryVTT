<div class="skill-list">
    <header class="skill-row skill-header">
        <div class="skill-name">{{localize "IMPMAL.Skill"}}</div>
        <div class="skill-characteristic">{{localize "IMPMAL.Characteristic"}}</div>
        <div>{{localize "IMPMAL.Adv"}}</div>
        <div>{{localize "IMPMAL.Total"}}</div>
    </header>
    {{#each system.skills}}
        <div class="skill-row">
            <div class="skill-name">{{configLookup "skills" @key}}</div>
            <div class="skill-characteristic">
                <div>
                    {{configLookup "characteristicAbbrev" this.characteristic}}
                </div>
                <div>
                    {{this.characteristicData.total}}
                </div>
            </div>
            <div>{{this.advances}}</div>
            <div><a>{{this.total}}</a></div>
        </div>
        {{#each this.specialisations}}
            <div class="skill-row spec">
                <div class="skill-name">{{this.name}}</div>
                <div class="skill-characteristic"></div>
                <div>{{this.system.advances}}</div>
                <div><a>{{this.system.total}}</a></div>
            </div>
        {{/each}}
    {{/each}}
</div>