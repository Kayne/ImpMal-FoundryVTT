<section class="list">
    <header class="list-row">
        <div class="list-name">{{localize "IMPMAL.Effects"}}</div>
        <div class="list-controls">
            <a class="list-create" data-type="effect" data-category="temporary"><i class="fa-solid fa-plus"></i></a>
        </div>
    </header>
    <div class="list-content">
        {{#each effects}}
            <div class="list-item" data-id="{{this.id}}" data-collection="effects" {{#if this.item}}data-item={{this.parent.id}}{{/if}}>
                <div class="list-row">
                    <div class="list-name">
                        <img src="{{this.icon}}">
                        <a class="list-edit">{{this.name}}</a>
                    </div>
                    <div class="list-controls">
                        <a class="list-delete"><i class="fa-solid fa-xmark"></i></a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</section>