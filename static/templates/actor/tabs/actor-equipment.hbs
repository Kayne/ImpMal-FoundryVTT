<div class="flexrow">

    <div class="actor-property inline">
        <label class="property-label">{{localize "IMPMAL.Solars"}}</label>
        <div class="property-value">
            <input type="number" value="{{system.solars}}" name="system.solars">
        </div>
    </div>

    <div class="encumbrance-section">

    </div>
</div>
<section class="list">
    <header class="list-row">
        <div class="list-name">{{localize "IMPMAL.Weapon"}}</div>
        <div class="small">{{localize "IMPMAL.Eqp."}}</div>
        <div class="small">{{localize "IMPMAL.Qty."}}</div>
        <div class="small">{{localize "IMPMAL.Enc."}}</div>
        <div class="list-controls">
            <a class="list-create" data-type="weapon"><i class="fa-solid fa-plus"></i></a>
        </div>
    </header>
    <div class="list-content">
        {{#each items.weapon}}
            <div class="list-item" data-id="{{this.id}}">
                <div class="list-row">
                    <div class="list-name">
                        <img src="{{this.img}}">
                        <a>{{this.name}}</a>
                    </div>
                    <div class="small">
                        {{#if (eq ../actor.type "character")}}
                            {{#if this.system.equipped.hands.left}}
                                <a class="equip {{#if this.system.equipped.offhand}}offhand{{/if}}" data-hand="left" data-target="system.equipped.value"><i class="fa-solid fa-hand"></i></a>
                            {{else}}
                                <a class="equip" data-hand="left" data-target="system.equipped.value"><i class="fa-regular fa-hand"></i></a>
                            {{/if}}

                            {{#if this.system.equipped.hands.right}}
                                <a class="equip {{#if this.system.equipped.offhand}}offhand{{/if}}" data-hand="right" data-target="system.equipped.value"><i class="fa-solid fa-hand"></i></a>
                            {{else}}
                                <a class="equip" data-hand="right" data-target="system.equipped.value"><i class="fa-regular fa-hand"></i></a>
                            {{/if}}

                        {{else}}
                            <a class="property-edit boolean" data-id="{{this.id}}" data-target="system.equipped.value">
                                {{#if this.system.equipped.value}}
                                    <i class="fa-regular fa-circle-check"></i>
                                {{else}}
                                    <i class="fa-regular fa-circle"></i>
                                {{/if}}
                            </a>
                        {{/if}}
                    </div>
                    <div class="small">{{this.system.quantity}}</div>
                    <div class="small">{{this.system.encumbrance.total}}</div>
                    <div class="list-controls">
                        <a class="list-edit"><i class="fa-solid fa-edit"></i></a>
                        <a class="list-post"><i class="fa-solid fa-comment"></i></a>
                        <a class="list-delete"><i class="fa-solid fa-trash"></i></a>
                    </div>
                </div>
                <div class="summary">

                </div>
            </div>
        {{/each}}
    </div>
</section>

