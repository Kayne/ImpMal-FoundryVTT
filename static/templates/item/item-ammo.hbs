<form class="{{cssClass}}" autocomplete="off">

    {{> systems/impmal/templates/item/partials/item-header.hbs isPhysical=isPhysical}}

    <section class="tab-section">
        <nav class="sheet-tabs tabs">
            <a class="tab-select item active" data-tab="notes">{{localize "IMPMAL.Description"}}</a>
            <a class="tab-select item" data-tab="details">{{localize "IMPMAL.Details"}}</a>
            <a class="tab-select item" data-tab="effects">{{localize "IMPMAL.Effects"}}</a>
        </nav>
        <div class="tab-content">
            <div class="tab notes-tab" data-tab="notes">
                {{> systems/impmal/templates/item/partials/item-notes.hbs}}
            </div>
            <div class="tab details" data-tab="details">

                {{#unless item.isOwned}}
                    <div class="form-group">
                        <label data-tooltip="{{localize 'IMPMAL.CustomAmmoHint'}}">{{localize "IMPMAL.Custom"}} <i
                                class="fa-regular fa-circle-question"></i></label>
                        <div class="form-fields">
                            <input type="checkbox" name="system.custom" {{checked system.custom}}>
                        </div>
                    </div>
                {{/unless}}

                <div {{#unless system.custom}}class="disabled inactive" {{/unless}}>

                    {{#unless item.isOwned}}
                        <div class="form-group">
                            <label>{{localize "IMPMAL.PriceMultiplier"}}</label>
                            <div class="form-fields">
                                <input type="number" name="system.priceMultiplier" value="{{system.priceMultiplier}}">
                            </div>
                        </div>
                    {{/unless}}

                    <div class="form-group">
                        <label>{{localize "IMPMAL.Damage"}}</label>
                        <div class="form-fields">
                            <input type="number" name="system.damage" value="{{system.damage}}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label>{{localize "IMPMAL.UsedWith"}}</label>
                        <div class="form-fields">
                            <input type="text" name="system.usedWith" value="{{system.usedWith}}">
                        </div>
                    </div>

                    {{> systems/impmal/templates/item/partials/item-traits.hbs}}
                </div>


            </div>
            <div class="tab effects" data-tab="effects">
                {{> systems/impmal/templates/item/partials/item-effects.hbs}}
            </div>
        </div>
    </section>
</form>